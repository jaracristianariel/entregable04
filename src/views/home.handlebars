{{#each allProducts}}
<article class="container">
    <div class="card">
        <div class="imgBx">
        <img src="{{thumbnail}}" width="150" />
        </div>
        <div class="contentBx">
        <h2>{{title}}</h2>
        <div class="size">
            <h3>{{description}}</h3>
            <h3>{{price}}</h3>
        </div>
        <a href="#">Buy Now</a>
        </div>
    </div>
</article>
{{/each}}